@{
}

@model CategoryProductsModel

<div class="row">

    <div class="col-lg-3">
        <div class="bg-dark p-2 mb-3">Search Bar someday</div>
        <div class="list-group">
            @foreach (var category in Model.Categories)
            {
                <a href="/@category.Name" class="list-group-item bg-dark"
                   style="color: #fff;">
                    @category.Name
                </a>
                <div class="list-group">
                    @foreach (var subcategory in category.Children)
                    {
                        <a href="/@category.Name/@subcategory.Name" class="list-group-item"
                           style="background: rgba(36, 39, 51, 0.6);color: #fff;">
                            @subcategory.Name
                        </a>
                    }
                </div>
            }
        </div>
    </div>

    <div class="col-lg-9">

        <span class="d-block h3 text-white bg-dark p-2 m-0">@Model.CurrentCategory</span>
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-90" style="height: 100%;">
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id"
                            class="p-3" style="width: 100%; height: 190px;">
                            <img class="card-img-top w-100 h-100" style="object-fit: contain;" src="@item.ThumbNailPath" alt="">
                        </a>
                        <div class="card-body">
                            <h4 class="card-title mb-3 w-100">
                                <a class="text-dark" href="#">@item.Title</a>
                            </h4>
                            <h5 class="text-danger mb-0">€@item.Price.ToString("0.00")</h5>
                        </div>
                        <!--
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                        -->
                    </div>
                </div>
            }
        </div>
    </div>

</div>