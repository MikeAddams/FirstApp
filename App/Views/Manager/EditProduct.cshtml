@{
}

@model EditProductModel

<form asp-controller="Manager" asp-action="EditProduct" method="POST"
      class="form-horizontal" enctype="multipart/form-data">
    <fieldset class="row">

        <div class="col-md-5 p-0">
            <input type="hidden" asp-for="Id" />

            <div class="form-group col-md p-0">
                <label class="col-md control-label">PRODUCT NAME</label>
                <div class="col-md-10">
                    <input asp-for="Title" type="text"
                           placeholder="PRODUCT NAME" class="form-control input-md" required>
                    <span asp-validation-for="Title"></span>
                </div>
            </div>

            <div class="form-group col-md mt-3 p-0">
                <label class="col-md control-label">PRODUCT DESCRIPTION</label>
                <div class="col-md-10">
                    <textarea asp-for="Description" type="text"
                              class="form-control" required
                              style="height: 125px;">
                    </textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-group col-md mt-3 p-0">
                <label class="col-md control-label">PRODUCT PRICE</label>
                <div class="col-md-4">
                    <input asp-for="Price" type="number"
                           placeholder="PRODUCT PRICE" class="form-control input-md" required>
                    <span asp-validation-for="Price"></span>
                </div>
            </div>

        </div>


        <div class="form-group col-md-7">
            <input type="hidden" asp-for="@Model.CurrentImage.Id" />

            <div class="form-group d-block">
                <label class="col control-label">CURRENT THUMBNAIL PREVIEW</label>
                <div class="pro-img-details">
                    <img class="w-25" src="@Model.CurrentImage.ThumbNailPath" alt="">
                </div>

                <div class="col mt-1">
                    <span class="mr-3">Change image</span>
                    <input asp-for="UpdatedThumbNail" type="file"
                           class="input-file">
                </div>
            </div>

            <div class="form-group d-block mt-4">
                <label class="col control-label">CURRENT IMAGE PREVIEW</label>
                <div class="pro-img-details">
                    <img class="w-25" src="@Model.CurrentImage.FullSizePath" alt="">
                </div>

                <div class="col mt-1">
                    <span class="mr-3">Change image</span>
                    <input asp-for="UpdatedFullSize" type="file"
                           class="input-file">
                </div>
            </div>
        </div>

    </fieldset>

    <div class="row mt-3">
        <div class="col">

            <div class="form-group d-inline float-right ml-3">
                <button type="submit"
                        class="btn btn-primary px-4">
                    Save
                </button>
            </div>

            <div class="form-group d-inline float-right ml-3">
                <button asp-controller="Manager" asp-action="MyProducts"
                        class="btn btn-danger px-4">
                    Cancel
                </button>
            </div>

        </div>
    </div>


    @if (@TempData["ProductStatus"] != null)
    {
        <div class="alert alert-secondary">
            <h5>@TempData["ProductStatus"]</h5>
        </div>
    }


</form>
